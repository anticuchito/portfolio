---
import Layout from '../layouts/Layout.astro';
import { projects } from "../lib/data";

// Si no hay proyectos, redirigir al home
if (!projects || projects.length === 0) {
  return Astro.redirect('/');
}
---

<Layout title="Proyectos | Portfolio">
  <div>
    <h1 class="text-4xl md:text-5xl font-bold mb-8">
      PROYECTOS <span class="accent">//</span>
    </h1>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
      {projects.map((project) => (
        <article class="box-brutal p-6 md:p-8 flex flex-col">
          <div class="flex justify-between items-start mb-4">
            <h2 class="text-xl md:text-2xl font-bold">{project.name}</h2>
            {project.endDate && (
              <span class="text-xs font-bold px-2 py-1 border-2 border-accent text-accent">
                Completado
              </span>
            )}
          </div>
          
          <p class="text-secondary mb-6 flex-grow">
            {project.description}
          </p>

          {project.highlights && project.highlights.length > 0 && (
            <div class="flex flex-wrap gap-2 mb-6">
              {project.highlights.map((highlight) => (
                <span class="text-xs font-bold border-2 border-brutal px-2 py-1">
                  {highlight}
                </span>
              ))}
            </div>
          )}

          <div class="flex gap-4 mt-auto">
            {project.url && (
              <a href={project.url} class="btn-brutal text-sm" target="_blank" rel="noopener noreferrer">
                VER DEMO →
              </a>
            )}
          </div>
        </article>
      ))}
    </div>

    <div class="mt-12 text-center">
      <p class="text-secondary mb-4">¿Quieres ver más?</p>
      <a href="https://github.com/miguel-rivero-pinto" class="btn-brutal" target="_blank" rel="noopener noreferrer">
        GITHUB →
      </a>
    </div>
  </div>
</Layout>